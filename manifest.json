{
  "manifest_version": 2,

  "name": "History Burner",
  "description": "Historical revisionism at its finest.",
  "version": "1.0.2",

  "browser_action": {
    "default_icon": "icon16.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_page": "options.html",

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },

  "permissions": [
    "browsingData",
    "history",
    "storage",
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
